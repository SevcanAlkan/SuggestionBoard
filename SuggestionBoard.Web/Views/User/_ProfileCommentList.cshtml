@using SuggestionBoard.Data.ViewModel
@model List<ProfileCommentVM>

<div class="container" style="margin-top:0.5rem; margin-bottom:0.5rem;">

    <div class="col-12">
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="card text-md-left" style="margin-bottom:0.5rem">
                    <div class="card-body">
                        <a class="h4" asp-controller="Suggestion" asp-action="Detail" asp-route-id="@item.SuggestionId">@item.SuggestionTitle</a>
                        <p class="card-text">@item.CommentText</p>
                        @{
                            int dayCount = (int)Math.Round((DateTime.UtcNow - item.CreateDT).TotalDays);
                        }
                        @dayCount days ago
                    </div>
                </div>
            </div>
        }
    </div>

</div>