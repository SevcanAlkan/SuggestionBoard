@using SuggestionBoard.Core.Enum
@using SuggestionBoard.Data.ViewModel
@model List<ProfileReactionVM>

<div class="container" style="margin-top:0.5rem; margin-bottom:0.5rem;">

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card text-md-left" style="margin-bottom:0.5rem">
                    <div class="card-body">
                        <a class="h6" asp-controller="Suggestion" asp-action="Detail"
                           asp-route-id="@item.SuggestionId">@item.SuggestionTitle</a>
                        <p class="card-text">@(item.Reaction == UserReaction.Like ? "👍" : "👎")</p>
                        @{
                            int dayCount = (int)Math.Round((DateTime.UtcNow - item.CreateDT).TotalDays);
                        }
                        @dayCount days ago
                    </div>
                </div>
            </div>
        }
    </div>

</div>