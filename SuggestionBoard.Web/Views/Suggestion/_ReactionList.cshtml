@using SuggestionBoard.Core.Enum
@using SuggestionBoard.Data.ViewModel
@model List<SuggestionReactionVM>

<div class="container" style="margin-top:0.5rem; margin-bottom:0.5rem;">

    <div class="col-12">
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="card text-md-left" style="margin-bottom:0.5rem">
                    <div class="card-body">
                        <labbel for="@item.Id"><a asp-action="Profile" asp-controller="User" asp-route-id="@item.CreateBy">@item.CreateByName</a>: </labbel>
                        <p id="@item.Id" class="card-text">@(item.Reaction == UserReaction.Like ? "👍" : "👎")</p>
                    </div>
                </div>
            </div>
        }
    </div>

</div>